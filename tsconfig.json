{
  "compilerOptions": {
    "target": "es6",
    "noImplicitAny": false,
    "module": "commonjs",
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": [
    "assets/js/**/*",
    "node_modules/@types/node/globals.d.ts",
    "vue-module.d.ts",
    "window.d.ts",
  ]
}
