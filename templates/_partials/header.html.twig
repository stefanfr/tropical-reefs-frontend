{% set categories = categoryTree.collect %}
<header class="sticky top-0 bg-base-100 border-b border-solid border-base-200 shadow-xl z-50">
    {#    {% include '_partials/_usps.html.twig' %} #}
    <div class="container mx-auto px-5 xl:px-0">
        <div class="gap-8 grid grid-cols-3 md:grid-cols-6 lg:grid-cols-7 xl:grid-cols-8">
            {% if device.isSmartphone %}
                <div class="flex items-center">
                    {% include '_partials/mobile/_navigation.html.twig' %}
                </div>
            {% endif %}
            <a href="{{ path('app_home') }}" class="pt-3 pb-3">
                <picture class="logo_full">
                    <source srcset="{{ asset('build/assets/images/logo.png'|cdn('auto', 400, 144)) }}"/>
                    <img width="150" height="72" src="{{ asset('build/assets/images/logo.png'|cdn('auto', 200, 72)) }}" alt="logo"/>
                </picture>
            </a>
            <div class="hidden lg:flex items-center justify-center bg-base-200">
                <div class="menu-items flex w-full h-full">
                    <div class="flex gap-10 w-full h-full">
                        <div tabindex="0" class="dropdown cursor-pointer py-4 px-4 leading-5 w-full h-full">
                            <label class="title cursor-pointer">
                                <small class="block">{{ 'View all'|trans }}</small>
                                <span class="float-left font-bold">{{ 'Categories'|trans }}</span>
                            </label>
                            <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box" style="width: 300px">
                                {% for category in categories %}
                                    <li>
                                        <a href="/{{ category['url_path'] }}">{{ category['name'] }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-span-4 xl:col-span-5 justify-end items-center hidden md:flex">
                <input aria-label="Search products and categories" type="search" placeholder="{{ 'Where are you looking for?'|trans }}" class="input input-bordered input-accent grow"/>
            </div>
            <div class="flex gap-2 items-center justify-end">
                <a href="{{ path('app_customer') }}" aria-label="customer portal grow">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 aspect-square">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"/>
                    </svg>
                </a>
                <a href="#" class="indicator" aria-label="wishlist">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 aspect-square">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"/>
                    </svg>
                    <span class="indicator-item badge badge-accent text-accent-content p-2 aspect-square mt-1 mr-2 text-xs">9+</span>
                </a>
                {{ component('header_cart') }}
            </div>
        </div>
    </div>
    {% if device.isSmartphone != true %}
        {% include '_partials/_navigation.html.twig' %}
    {% endif %}
</header>