{% set categories = categoryTree.collect %}
<nav class="bg-base-200 hidden sm:block">
    <div class="container mx-auto px-5 xl:px-0">
        <div class="flex gap-10 py-2">
            {% for category in categories|slice(0,8) %}
                <a
                        class=""
                        href="/{{ category['url_path'] }}"
                >
                    {{ category['name'] }}
                </a>
            {% endfor %}
        </div>
    </div>
</nav>
