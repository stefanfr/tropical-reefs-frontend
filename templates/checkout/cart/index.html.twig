{% extends 'base.html.twig' %}
{% set showDivider = true %}

{% block title %}Checkout cart{% endblock %}

{% block body %}
    <div class="container mx-auto mt-8">
        <h1 class="text-4xl">Shopping cart</h1>
        <div class="grid md:grid-cols-4 gap-5 mt-8">
            <div class="cart__items col-span-3">
                <div class="cart__items-item grid gap-5">
                    {% for item in cart['items'] %}
                        {% include 'checkout/cart/_partials/item.html.twig' with {'item': item} %}
                    {% endfor %}
                </div>
            </div>
            <div class="cart__totals-container relative">
                <div class="bg-base-300 w-full py-8 px-6 flex flex-col shadow-md rounded-box" style="top: 5rem;" id="sticky-totals">
                    <h3 class="text-2xl">Totals</h3>
                    <div class="cart__totals-totals grid grid-cols-3 gap-4 mt-4">
                        {% for total in totals %}
                            <span class="col-span-2">{{ total['label'] }}</span>
                            <strong>&euro; {{ total['value'] }}</strong>
                        {% endfor %}
                    </div>
                    <div class="flex grow items-end mt-12">
                        <a href="{{ path('app_checkout_checkout') }}" class="flex btn btn-accent w-full">
                            {{ 'Go to checkout'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
