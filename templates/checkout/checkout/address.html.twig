{% extends 'checkout.base.html.twig' %}

{% block title %}Checkout ~ Address{% endblock %}
{% set isCheckout = true %}
{% set title = 'Checkout'|trans %}

{% block body %}
    <div class="container mx-auto mt-2 grid grid-cols-8 items-center">
        <checkout-header :current-step="1"></checkout-header>
        <checkout-address-step :is-logged-in="{{ isLoggedIn ? 1 : 0 }}" :customer-addresses="{{ customerAddresses|json_encode }}"></checkout-address-step>
    </div>
{% endblock %}
