<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Tropical Reefs - {% block title %}{% endblock %}</title>
    <meta name="description" content="{% block description %}Shop top saltwater aquarium equipment at Tropical Reefs. We carry everything you will need for your saltwater aquarium or reef tank. {% endblock %}"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('build/assets/images/favicon/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('build/assets/images/favicon/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('build/assets/images/favicon/favicon-16x16.png') }}">
    <link rel="manifest" href="{{ asset('build/assets/images/favicon/site.webmanifest') }}">
    <link rel="mask-icon" href="{{ asset('build/assets/images/favicon/safari-pinned-tab.svg') }}" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#00aba9">
    <meta name="theme-color" content="#ffffff">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
{% include '_partials/header.html.twig' %}
<main class="mt-4">
    {% block breadcrumbs %}{% endblock %}
    {% block body %}{% endblock %}
</main>
{% include '_partials/footer.html.twig' %}
</body>
</html>

<script>
    const stickNav = document.getElementById('sticky-nav');
    const navBar = document.getElementById('menu-bar');
    const sticky = stickNav.offsetTop;

    addEventListener('scroll', () => {
        handleStickyHeader();
    });

    function handleStickyHeader() {
        if (window.scrollY > sticky) {
            stickNav.classList.add("fixed");
            navBar.classList.add('py-3');
            navBar.classList.remove('py-5');
        } else {
            navBar.classList.add('py-5');
            navBar.classList.remove('py-3');
            stickNav.classList.remove("fixed");
        }
    }
</script>