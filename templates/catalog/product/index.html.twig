{% extends 'base.html.twig' %}
{% set showDivider = true %}

{% block title %}{% endblock %}

{% block breadcrumbs %}
    <div class="container mx-auto">
        <div class="text-sm breadcrumbs">
            <ul>
                <li><a href="{{ path('app_home') }}"><i class="la la-home"></i></a></li>
                <li><a href="{{ path('app_category') }}">{{ 'Coral'|trans }}</a></li>
                <li><a href="{{ path('app_category') }}">{{ 'LPS Corals'|trans }}</a></li>
                <li><a href="{{ path('app_category') }}">{{ 'Euphyllidae'|trans }}</a></li>
                <li>{{ 'Euphyllia ancora (Pinkish)'|trans }}</li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container mx-auto mt-4">
        <div class="grid lg:grid-cols-5 gap-10 sm:grid-cols-1">
            <div class="product__images-container col-span-3">
                <div class="flex gap-4">
                    <div class="image__thumbnail flex-col">
                        <a href="#image_1">
                            <img style="aspect-ratio: 1" width="95" class="cursor-pointer thumbnail active rounded-box" src="https://shop.dejongmarinelife.nl/media/catalog/product/cache/58af15fc54ae9324a4e860e0fbe6423f/a/n/ancora_pinkish.jpg" alt="">
                        </a>
                        <a href="#image_2">
                            <img style="aspect-ratio: 1" width="95" class="cursor-pointer thumbnail active mt-4 rounded-box" src="https://shop.dejongmarinelife.nl/media/catalog/product/cache/58af15fc54ae9324a4e860e0fbe6423f/9/1/91_2.jpg" alt="">
                        </a>
                        <a href="#image_3">
                            <img style="aspect-ratio: 1" width="95" class="cursor-pointer thumbnail active mt-4 rounded-box" src="https://shop.dejongmarinelife.nl/media/catalog/product/cache/58af15fc54ae9324a4e860e0fbe6423f/1/0/103_2.jpg" alt="">
                        </a>
                        <a href="#image_4">
                            <img style="aspect-ratio: 1" width="95" class="cursor-pointer thumbnail active mt-4 rounded-box" src="https://shop.dejongmarinelife.nl/media/catalog/product/cache/58af15fc54ae9324a4e860e0fbe6423f/9/9/99_2.jpg" alt="">
                        </a>
                        <a href="#image_5">
                            <img style="aspect-ratio: 1" width="95" class="cursor-pointer thumbnail active mt-4 rounded-box" src="https://shop.dejongmarinelife.nl/media/catalog/product/cache/58af15fc54ae9324a4e860e0fbe6423f/l/p/lps-eap-050992_1.jpg" alt="">
                        </a>
                    </div>
                    <div class="carousel rounded-box w-65" style="max-width: 640px;">
                        <div id="image_1" class="carousel-item w-full">
                            <img style="aspect-ratio: 1" width="640" src="https://shop.dejongmarinelife.nl/media/catalog/product/a/n/ancora_pinkish.jpg" alt="">
                        </div>
                        <div id="image_2" class="carousel-item w-full">
                            <img style="aspect-ratio: 1" width="640" src="https://shop.dejongmarinelife.nl/media/catalog/product/9/1/91_2.jpg" alt="">
                        </div>
                        <div id="image_3" class="carousel-item w-full">
                            <img style="aspect-ratio: 1" width="640" src="https://shop.dejongmarinelife.nl/media/catalog/product/1/0/103_2.jpg" alt="">
                        </div>
                        <div id="image_4" class="carousel-item w-full">
                            <img style="aspect-ratio: 1" width="640" src="https://shop.dejongmarinelife.nl/media/catalog/product/9/9/99_2.jpg" alt="">
                        </div>
                        <div id="image_5" class="carousel-item w-full">
                            <img style="aspect-ratio: 1" width="640" src="https://shop.dejongmarinelife.nl/media/catalog/product/l/p/lps-eap-050992_1.jpg" alt="">
                        </div>
                    </div>
                </div>

            </div>
            <div class="product__details-container col-span-2">
                <div class="product__details-title grid">
                    <h1 class="text-4xl font-bold">{{ 'Euphyllia ancora (Pinkish)'|trans }}</h1>
                    <div class="grid grid-cols-2">
                        <div class="grid">
                            <div class="product__details-review mt-1">
                                <div class="rating rating-sm block mx-1 float-left">
                                    {% for index in 0..4 %}
                                        <input disabled type="radio" name="rating-{{ index }}" class="mt-1 mask mask-star-2 bg-accent" {% if index == 3 %} checked {% endif %} />
                                    {% endfor %}
                                </div>
                                <a class="text-sm block mt-1 float-left ml-2" href="#reviews">120 reviews</a>
                            </div>
                            <div class="product__details-delivery block mt-3">
                                {{ 'Shipped in 5 - 10 working days' }}
                            </div>
                        </div>
                        <div class="product__details-price mt-5 flex gap-1">
                            <small class="product_details-from-price line-through">&euro; 59.99</small>
                            <strong class="product_details-from-price text-4xl">&euro; 39.99</strong>
                        </div>
                    </div>
                    <div class="product__details-configuration mt-5">
                        <div class="grid grid-cols-8 gap-4 sm:grid-cols-3">
                            <select name="qty" id="qty" class="select select-accent col-span-2 sm:col-span-1">
                                {% for index in 0..10 %}
                                    <option value="{{ index }}" {% if index == 1 %}selected {% endif %}>{{ index }}</option>
                                {% endfor %}
                            </select>
                            <div class="col-span-5 grid grid-cols-2 gap-3 sm:col-span-2">
                                <button class="col-span-2 btn btn-outline btn-accent flex">
                                    <span class="grow">{{ 'Add to cart'|trans }}</span>
                                    <i class="la la-cart-plus la-2x" style="margin-right: 5px"></i>
                                </button>
                                <button class="btn btn-sm btn-outline btn-error">
                                    <span class="grow">{{ 'Add to wishlist'|trans }}</span>
                                </button>
                                <button class="btn btn-sm btn-outline btn-info">
                                    <span class="grow">{{ 'Share'|trans }}</span>
                                    <i class="la la-share" style="margin-right: 5px"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="product__details-short-description mt-5 sm:hidden lg:block">
                        These corals are a wonderful asset to the aquarium, and available in all shapes, sizes and
                        colors. In principle, a hammer made of bladder coral is fairly easy to keep, even for beginners.
                        <br/>
                        <br/>
                        It grows best when the water values are good, that is a little bit of phosphate and nitrate must
                        be there, and certainly the rest of the water value must also be in order.
                        <a class="mt-3 text-accent" href="#product-description">{{ 'Read more'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="divider lg:divider-vertical" style="margin-top: 4rem" id="product-description">
        <h3 class="text-3xl font-bold">{{ 'Product description'|trans }}</h3>
    </div>
    <div class="container mx-auto mt-10">
        <div class="product__description grid grid-cols-3 gap-20">
            <div class="product__description-text col-span-2">
                <h3 class="text-xl font-bold">About Euphyllia ancora (Pinkish).</h3>
                <p class="mt-3">
                    These corals are a wonderful asset to the aquarium, and available in all shapes, sizes and colors.
                    In
                    principle, a hammer made of bladder coral is fairly easy to keep, even for beginners.<br/>
                    <br/>
                    It grows best when the water values are good, that is a little bit of phosphate and nitrate must be
                    there, and certainly the rest of the water value must also be in order.<br/>
                    <br/>
                    These corals feed on light (preferably T5), but can also be fed with different types of food, and of
                    course also with brine shrimp and mysis.<br/>
                    <br/>
                    The corals in the photos shown are an impression. We always have the most beautiful and best quality
                    coral in house. Rest assured that we will insure and ship the most beautiful and best corals to you.
                    These corals are not WYSIWYG corals, they are identified by a WYSIWYG tag.
                </p>
            </div>
            <div class="product__description-text">
                <h3 class="text-xl font-bold">Characteristics</h3>
                <table class="table table-compact w-full mt-3">
                    <tr>
                        <td class="font-bold">Origin</td>
                        <td>Australia</td>
                    </tr>
                    <tr>
                        <td class="font-bold">Illuminance</td>
                        <td>Average</td>
                    </tr>
                    <tr>
                        <td class="font-bold">Animal species</td>
                        <td>Hammers and vesicle coral</td>
                    </tr>
                    <tr>
                        <td class="font-bold">Current</td>
                        <td>Average</td>
                    </tr>
                    <tr>
                        <td class="font-bold">Placement</td>
                        <td>Everywhere</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="divider lg:divider-vertical" style="margin-top: 4rem">
        <h3 class="text-3xl font-bold">{{ 'Related products'|trans }}</h3>
    </div>
    <div class="container mx-auto">
        <div class="product_row grid grid-cols-5 gap-4 mt-8 col-span-6">
            {% include 'catalog/_partials/product_list.html.twig' with {'count': 5} %}
        </div>
    </div>
    <div id="reviews" class="divider lg:divider-vertical" style="margin-top: 4rem">
        <h3 class="text-3xl font-bold">{{ 'Product reviews'|trans }}</h3>
    </div>
{% endblock %}
