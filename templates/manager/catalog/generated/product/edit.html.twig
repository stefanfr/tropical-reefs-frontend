{% extends 'manager/base.html.twig' %}

{% block title %}Generated products ~ Edit {{ product.name }}{% endblock %}

{% block body %}
    <h1 class="text-2xl my-10">Edit product {{ product.name }}</h1>
    {{ form_start(form) }}
    <div class="form mb-20">
        <div class="controls flex justify-end mb-5">
            <button class="btn btn-accent btn-sm" type="submit">Save</button>
        </div>
        <table class="table w-full">
            <thead>
            <tr>
                <th>Field</th>
                <th>Value</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th>{{ form_label(form.sku) }}</th>
                <td>{{ form_widget(form.sku) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.eanCode) }}</th>
                <td>{{ form_widget(form.eanCode) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.name) }}</th>
                <td>{{ form_widget(form.name) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.description) }}</th>
                <td>{{ form_widget(form.description) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.categories) }}</th>
                <td>{{ form_widget(form.categories) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.brand) }}</th>
                <td>{{ form_widget(form.brand) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.weight) }}</th>
                <td>{{ form_widget(form.weight) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.tax) }}</th>
                <td>{{ form_widget(form.tax) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.salesPrice) }}</th>
                <td>{{ form_widget(form.salesPrice) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.purchasePrice) }}</th>
                <td>{{ form_widget(form.purchasePrice) }}</td>
            </tr>
            </tbody>
        </table>
        <div class="controls flex justify-end mt-5">
            <button class="btn btn-accent btn-sm" type="submit">Save</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
