{% extends 'manager/base.html.twig' %}

{% block title %}Generated products{% endblock %}

{% block body %}
    <h1 class="text-4xl my-5">Generated products</h1>
    <div class="overflow-x-auto mt-4">
        <div class="pagination my-3 flex justify-between sticky left-0">
            {{ knp_pagination_sortable(pagination, 'Supplier Code', 'supplier_code', {class: 'btn btn-accent btn-sm'}) }}
            {{ knp_pagination_render(pagination) }}
            {#            {{ knp_pagination_filter(pagination) }}#}
        </div>
        <table class="table w-full">
            <thead>
            <tr>
                <th>#</th>
                <th></th>
                <th>SKU</th>
                <th>Brand</th>
                <th>Supplier code</th>
                <th>Product name</th>
            </tr>
            </thead>
            <tbody>
            {% for product in pagination %}
                <tr>
                    <th style="width: 7vh">{{ product.id }}</th>
                    <td class="flex gap-3 justify-end">
                        <a class="text-warning" href="{{ path('app_manager_catalog_generated_product_edit', {product: product.id}) }}">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125"/>
                            </svg>
                        </a>
                        <a class="text-error" href="{{ path('app_manager_catalog_generated_product_delete', {product: product.id}) }}">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"/>
                            </svg>
                        </a>
                    </td>
                    <td>{{ product.sku }}</td>
                    <td>{{ product.brand }}</td>
                    <td>{{ product.supplierCode }}</td>
                    <td>{{ product.name }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="pagination mb-20 mt-3 flex justify-center sticky left-0">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
