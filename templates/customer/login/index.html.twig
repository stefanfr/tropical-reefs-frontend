{% extends 'base.html.twig' %}

{% block title %}{{ 'Customer Login'|trans }}{% endblock %}

{% block body %}
    <div class="messages_container px-8">
        {% if errors is defined and errors is not empty %}
            {% for error in errors %}
                <div class="alert alert-error shadow-md alert-sm">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span>{{ error['message'] }}</span>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
    <div class="container mx-auto mt-2 grid grid-cols-8 items-center">
        <div class="mt-4 py-8 col-start-3 col-span-4 container border border-base-300 rounded-box shadow-md border-solid grid justify-center">
            <h2 class="text-2xl mt-4">{{ 'Login'|trans }}</h2>
            <p class="mt-2">{{ 'Already an account? Login below to make use of all benifits' }}</p>
            {{ form_start(form, {attr: {class: 'grid gap-4 mt-4'}}) }}
            {{ form_errors(form) }}
            {{ form_widget(form.email) }}
            {{ form_widget(form.password) }}
            <input type="submit" class="btn btn-accent" value="{{ 'Login'|trans }}">
            {{ form_end(form) }}
            <div class="register text-center mt-8">
                <p>
                    {{ 'No account yet?'|trans }}
                    <br/>
                    {{ 'Register an account and make use of all benifits'|trans }}
                </p>
                <a class="text-accent" href="{{ path('app_customer_register') }}">{{ 'Click here to register'|trans }}</a>
            </div>
        </div>
    </div>
{% endblock %}
